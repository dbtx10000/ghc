<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="COMMON_SQL">
	<sql id="QUERY">
		<if test="id != null">and id = #{id}</if>
	    <if test="hot != null">and hot = #{hot}</if>
	    <if test="top != null">and top = #{top}</if>
	    <if test="weight != null">and weight = #{weight}</if>
	    <if test="condition != null">${condition}</if>
	  	<if test="orderBy != null">${orderBy}</if>
	    <if test="groupBy != null">${groupBy}</if>
	</sql>
	<sql id="FUZZY">
		<if test="keywords != null">
			<foreach item="keyword" collection="keywords">
				<![CDATA[and concat(${fuzzies}) like #{keyword}]]>
			</foreach>
		</if>
	</sql>
	<sql id="LIMIT">
		<if test="sortWay != null">
			<![CDATA[order by ${sortWay}]]>
		</if>
		<if test="startIndex != null">
			<if test="pageSize != null">
				<![CDATA[limit #{startIndex},#{pageSize}]]>
			</if>
		</if>
	</sql>
</mapper>