	function  slideControl(){
			event.preventDefault();
			var height=$(window).height();
		    var mySwiper = new Swiper('.swiper-container', {
		    	initialSlide:0,
		    	height:height,
		        pagination: '.swiper-pagination',
		        paginationClickable: true,
		        direction: 'vertical',
		        longSwipes:0.01,
		        mousewheelControl:true,
		        shortSwipes:true,
		        onSlideChangeStart: function(mySwiper){
		        	var index=mySwiper.activeIndex;
				      switch (index){
				      	case 0 : 
				      		$("#page0").find('.big').fadeIn().addClass('yun_left');
				      		$("#page0").find('.ball').fadeIn().addClass('slideInUp');
				      		$("#page0").find('.words').fadeIn().addClass('slideInDown');
				      		$("#page0").find('.small').fadeIn().addClass('yun_right');
				      		setTimeout(function(){
				      			$("#page0").find('.tips').fadeIn().addClass('slideInLeft');
				      		},800);
				      		$("#page0").find('.text0').fadeIn().addClass('bounceIn');
				      		$("#page1,#page2,#page3,#page4").find('.animated').hide();
				      		break;
				      	case 1 :
				      		$("#page1").find('.gohigh').show().addClass('zoomIn');
				      		$("#page1").find('.map').fadeIn().addClass('slideInLeft');
				      		$("#page1").find('.right').fadeIn().addClass('slideInRight');
				      		$("#page1").find('.ten').show().addClass('flipInX');
				      		$("#page1").find('.news').fadeIn().addClass('slideInUp');
				      		$("#page0,#page2,#page3,#page4").find('.animated').hide();
				      		break;
				      	case 2 : 
				      		var oLi=$(".people-list li");
				      		$(oLi[0]).fadeIn().addClass('slideInLeft');
				      		var i=1;
				      		var timer=setInterval(function(){
				      			if(i<oLi.length){
				      				$(oLi[i]).fadeIn().addClass('slideInLeft');
				      			}else{
				      				clearInterval(timer);
				      			}
				      			i++;
				      		},300);
				      		$("#page2").find('.title').show().addClass('slideInLeft delay12');
				      		$("#page2").find(".best").fadeIn().addClass('rotateInDownLeft delay15');
				      		$("#page0,#page1,#page3,#page4").find('.animated').hide();
				      		break;
				      	case 3 : 
				      		$("#page3").find('.circle').show().addClass('zoomIn');
				      		var text=$("#page3").find('.circle section');
				      		$(text[0]).show().addClass('zoomIn delay05');
				      		var i=1;
				      		var timer=setInterval(function(){
				      			if(i<text.length){
				      				$(text[i]).show().addClass('zoomIn');
				      			}else{
				      				clearInterval(timer);
				      			}
				      			i++;
				      		},300);
				      		$("#page3").find('li').fadeIn().addClass('rotateInDownLeft');
				      		$("#page3").find('.list1').fadeIn().addClass('delay08');
				      		$("#page3").find('.list2').fadeIn().addClass('delay10');
				      		$("#page3").find(".list3").fadeIn().addClass('delay12');
				      		$("#page3").find(".list4").fadeIn().addClass('delay15');
				      		$("#page3 .foot").find('.right').fadeIn().addClass('slideInLeft');
				      		$("#page3 .foot").find('.left').fadeIn().addClass('slideInRight');
				      		$("#page3").find(".title").show().addClass('slideInLeft');
				      		$("#page1,#page2,#page0,#page4").find('.animated').hide();
				      		break;
				      	case 4 : 
				      		$("#page4").find('.e_left').fadeIn().addClass('slideInLeft');
				      		$("#page4").find('.e_right').fadeIn().addClass('slideInRight');
				      		$("#page4").find('.btn').fadeIn().addClass('rubberBand');
				      		$("#page4").find('.note').fadeIn().addClass('slideInLeft');
				      		$("#page4").find('.product').fadeIn().removeClass("slideOutLeft").addClass('slideInLeft');
				      		$("#page1,#page2,#page3,#page0").find('.animated').hide();
				      		$("#page4").find('.active').show().siblings('a').hide();
				      		break;
				      }

				}
		    });
    		

		}

		function changes(t){
			if($(t).hasClass('active')){
				$("#product").removeClass('slideInLeft delay05').addClass('slideOutLeft').hide();
				$("#rule").show().addClass('slideInRight');
			}else{
				$("#rule").removeClass('slideInRight delay05').addClass('slideInLeft').hide();
				$("#product").removeClass('slideOutLeft').show().addClass('slideInLeft');
			}
			$(t).hide().siblings('a').fadeIn();
		}

		function tipsfadeIn(){
