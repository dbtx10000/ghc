<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- 配置线程池 -->
    <bean id ="threadPoolTaskExecutor" scope="singleton"
    		class ="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" >  
	    <property name ="corePoolSize" value ="10" />	<!-- 线程池维护线程的最少数量 -->
	    <property name ="maxPoolSize" value ="500" />	<!-- 线程池维护线程的最大数量 -->
	    <property name ="keepAliveSeconds" value ="30000" />	<!-- 线程池维护线程允许的空闲时间 -->
	    <property name ="queueCapacity" value ="100" />	<!-- 线程池使用的缓冲队列 -->
    </bean>
		
</beans>